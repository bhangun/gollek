#!/bin/sh

##############################################################################
# Gradle start up script for UN*X
##############################################################################

# Attempt to set APP_HOME
SAVED="`pwd`"
cd "`dirname \"$0\"`"
APP_HOME="`pwd -P`"
cd "$SAVED"

GRADLE_USER_HOME="${GRADLE_USER_HOME:-$HOME/.gradle}"
GRADLE_VERSION=8.2

if [ ! -d "$GRADLE_USER_HOME/wrapper/dists/gradle-$GRADLE_VERSION-bin" ]; then
    echo "Gradle wrapper not installed. Please install Gradle $GRADLE_VERSION"
    echo "Visit: https://gradle.org/install/"
    exit 1
fi

GRADLE_APP_DIR="$GRADLE_USER_HOME/wrapper/dists/gradle-$GRADLE_VERSION-bin"
GRADLE_BIN=$(find "$GRADLE_APP_DIR" -name "gradle" -type f 2>/dev/null | head -n 1)

if [ -z "$GRADLE_BIN" ]; then
    echo "Gradle binary not found"
    exit 1
fi

exec "$GRADLE_BIN" "$@"
