{
  "info": {
    "name": "KMP Chatbot API",
    "description": "API collection for KMP Chatbot Server",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Chat",
      "item": [
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"Hello, how are you?\",\n  \"session_id\": \"test-session-123\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/chat/message",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "chat", "message"]
            }
          }
        },
